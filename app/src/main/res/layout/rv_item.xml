<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp">

    <android.support.v7.widget.CardView
        android:layout_width="160dp"
        android:layout_height="135dp"
        app:cardMaxElevation="2dp"
        app:cardElevation="1dp"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="155dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/rv_image"
                android:src="@drawable/ic_launcher_background"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成大醫學院餐廳"
                android:id="@+id/rv_title"
                android:layout_below="@id/rv_image"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="5sp"
                android:textColor="#000"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeMaxTextSize="15sp"
                android:maxLines="1"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/rv_rating"
                android:id="@+id/rv_star"
                android:src="@drawable/star"
                android:layout_toLeftOf="@id/rv_rating"
                android:layout_alignBottom="@id/rv_rating"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:id="@+id/rv_rating"
                android:layout_below="@id/rv_title"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="5sp"
                android:textColor="#000"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeMaxTextSize="15sp"
                android:maxLines="1"/>



        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>

